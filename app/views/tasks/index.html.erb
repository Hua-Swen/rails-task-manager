<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li>
  <% if task.completed %>
  <input type="checkbox" checked>
  <% else %>
  <input type="checkbox">
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete task", task_delete_path(task.id), method: :delete %>
</li>
<% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
